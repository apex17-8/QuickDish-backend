###
# ----------------------------
# Sign Up a new user
# ----------------------------
POST http://localhost:3000/auth/signup
Content-Type: application/json

{
  "name": "max oumar",
  "email": "max@example.com",
  "password": "password123",
  "role": "restaurant_owner",
  "phone_number": "+254712345678"
}

###
# ----------------------------
# Sign In
# ----------------------------
POST http://localhost:3000/auth/signin
Content-Type: application/json

{
  "email": "max@example.com",
  "password": "password123"
}

###
# ----------------------------
# Refresh Tokens
# ----------------------------
# Replace <REFRESH_TOKEN> with the token returned from SignIn
POST http://localhost:3000/auth/refresh
Content-Type: application/json
Authorization: Bearer <REFRESH_TOKEN>

{
  "userId": 1
}

###
# ----------------------------
# Create a Restaurant (auth required)
# ----------------------------
# Replace <ACCESS_TOKEN> with the token returned from SignIn
POST http://localhost:3000/restaurants
Content-Type: application/json
Authorization: Bearer <ACCESS_TOKEN>

{
  "name": "Tiffany's Delight",
  "email": "tiffanysdelight@example.com",
  "phone_number": "+254712345678",
  "address": "123 Nairobi St",
  "description": "Best local dishes in town"
}

###
# ----------------------------
# Get Restaurants (public or protected depending on controller)
# ----------------------------
GET http://localhost:3000/restaurants
Authorization: Bearer <ACCESS_TOKEN>


